<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NUSupper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- buttons -->
    <style name="Button.Brown" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/brown</item>
    </style>

    <!-- create a jio/join a jio page? -->
    <style name="heading2_text">
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="heading3_text">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="jio_card_title">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="jio_card_sub">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="view_jio_subtitle">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="view_jio_subtitle2">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="jio_link_subtitle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>


</resources>